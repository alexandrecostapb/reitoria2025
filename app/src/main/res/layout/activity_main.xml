<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tela_inicial_layout"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/adicionarSugestaoButton"
        android:layout_width="180dp"
        android:layout_height="123dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="281dp"
        android:layout_marginEnd="206dp"
        android:layout_marginBottom="487dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add_sugestao_btn" />

    <ImageView
        android:id="@+id/sugestoesButton"
        android:layout_width="181dp"
        android:layout_height="122dp"
        android:layout_marginStart="205dp"
        android:layout_marginTop="282dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="487dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ver_sugestao_btn" />

    <ImageView
        android:id="@+id/logoutButton"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="236dp"
        android:layout_marginBottom="805dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logout_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>